<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body>
    <div
      class="w-full min-h-screen bg-zinc-900 flex flex-col items-center py-10"
    >
      <!-- Header -->
      <div class="w-full max-w-4xl flex justify-between items-center mb-8 px-4">
        <h3 class="text-3xl text-white font-semibold">Profile</h3>
        <a
          href="/logout"
          class="text-white bg-red-500 px-4 py-2 rounded-lg hover:bg-red-600 transition"
        >
          Logout
        </a>
      </div>

      <!-- Welcome -->
      <div class="w-full max-w-4xl bg-zinc-800 p-6 rounded-xl shadow-lg mb-8">
        <h3 class="text-xl text-white mb-2">
          Hi, <span class="font-bold"><%= user.name %></span> üëãüèª
        </h3>
        <p class="text-gray-400">You can create a new post below</p>

        <!-- Post Form -->
        <form action="/createpost" method="POST" class="mt-4 space-y-4">
          <textarea
            name="content"
            rows="4"
            class="w-full p-3 rounded-lg bg-zinc-700 text-white resize-none focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="What's on your mind?"
            name="content"
          ></textarea>
          <input
            type="submit"
            value="Create New Post"
            class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg cursor-pointer transition"
          />
        </form>
      </div>

      <!-- Posts Section -->
      <div class="w-full max-w-4xl text-white">
        <h2 class="text-2xl font-semibold mb-4">Your Posts</h2>
        <div class="space-y-6">
          <% user.posts.reverse().forEach((post) => { %>
          <!-- Post Card -->
          <div class="bg-zinc-800 p-6 rounded-xl shadow-lg">
            <h3 class="text-lg font-semibold text-blue-400">
              <%= user.username %>
            </h3>
            <p class="mt-2 text-gray-300"><%= post.content %></p>
            <h3><%=post.likes.length%>‚ù§Ô∏è</h3>
            <div class="mt-4 flex gap-4">
              
              <a href="/like/<%=post._id%>" class="text-blue-500 hover:underline">
                <%=post.likes.indexOf(user.id)===-1 ? "Like":"UnLike"%>
              </a>

              <a href="/edit/<%=post._id%>" class="text-green-500 hover:underline">Edit</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
